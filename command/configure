#!/bin/bash

set -e

. $(dirname $0)/base

WORKDIR "/work/out/${QEMU_SRC_BASENAME}"
RUN "/work/src/${QEMU_SRC_BASENAME}/configure" \
    --prefix="/work/dst/${QEMU_ARTIFACT_BASENAME}" \
    --disable-debug-info \
    --disable-system \
    --disable-werror \
    --enable-linux-user \
    --static \
    --target-list=x86_64-linux-user \
    --disable-tpm
